<%- if controller_name != 'sessions' %>
  <%= link_to "Iniciar Sesión", new_session_path(resource_name), {:style => "color: #00008B;"} %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Crear Cuenta", new_registration_path(resource_name), {:style => "color: #00008B;"} %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Olvidó su contraseña?", new_password_path(resource_name), {:style => "color: #00008B;"} %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "No recibió intrcucción de confirmación?", new_confirmation_path(resource_name), {:style => "color: #00008B;"} %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "No recibió intrucción de desboqueo?", new_unlock_path(resource_name), {:style => "color: #00008B;"} %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Iniciar sesión con #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), {:style => "color: #00008B;"} %><br />
  <% end -%>
<% end -%>
