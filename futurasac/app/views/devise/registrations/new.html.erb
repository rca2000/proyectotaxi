<div class="content">
	<div class="container_12">
		<div style="margin: 0 auto; width: 350px; text-align: center;">
      <h3 style="color: #00008B;">Registrarse</h3>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <br>
        <div class="field">
          <%= f.label :email, "Correo Electrónico", {:style => "color: #00008B;"} %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password, "Contraseña", {:style => "color: #00008B;"} %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password_confirmation, "Confirmar contraseña", {:style => "color: #00008B;"} %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Grabar", {:style => "color: #FFFFFF; background: #00008B; border: none; font-weight: bold; padding: 10px; outline: none;"} %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
		</div>
		<div class="clear"></div>
	</div>
</div>